<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="@android:Theme.Light">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/woopit_text_color</item>
    </style>
    
     <!-- Dialog theme. -->
    <style name="Dialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
       	<item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:textColor">@color/woopit_text_color</item>
    </style>

    <style name="big_button">
        <item name="android:background">@color/woopit_dark_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
        <item name="android:padding">10dp</item>
    </style>
    
    <style name="orange_button" parent="big_button">
        <item name="android:background">@color/woopit_orange</item>
    </style>
    
    <style name="facebook_button" parent="big_button">
        <item name="android:background">@color/facebook_color</item>
    </style>
    
    <style name="gplus_button" parent="big_button">
        <item name="android:background">@color/gplus_color</item>
    </style>
    
    <style name="title_center">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:textColor">@color/woopit_orange</item>
    </style>
    
    <style name="medium_title">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/woopit_orange</item>
    </style>
    
    <style name="normal_title">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@color/woopit_orange</item>
    </style>
    
    <style name="top_bar">
        <item name="android:background">@color/woopit_green</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="profile_image">
        <item name="android:background">@drawable/profile_image_bg</item>
        <item name="android:padding">1dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    
    <style name="profile_image_white" parent="profile_image">
        <item name="android:background">@drawable/profile_image_bg_white</item>
    </style>
    
    <style name="user_image">
        <item name="android:background">@drawable/user_bg</item>
        <item name="android:padding">3dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    
    <style name="back_button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:drawableLeft">@drawable/back</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">goBack</item>
        <item name="android:background">@drawable/back_button_bg</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    
    <style name="find_friends_button">
        <item name="android:src">@drawable/find_friends</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">goFindFriends</item>
    </style>
    
    <style name="progress_bar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/loader</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">1000</item>
    </style>
    
</resources>
